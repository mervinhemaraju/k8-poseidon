{
    "apiVersion": "argoproj.io/v1alpha1",
    "kind": "Application",
    "metadata": {
        "name": "github-arc",
        "namespace": "argocd",
        "finalizers": [
            "resources-finalizer.argocd.argoproj.io"
        ]
    },
    "spec": {
        "project": "default",
        "destination": {
            "server": "https://kubernetes.default.svc",
            "namespace": "github-arc"
        },
        "source": {
            "path": "helm/src/github/arc",
            "repoURL": "https://github.com/mervinhemaraju/k8-poseidon",
            "targetRevision": "main",
            "kustomize": {
                "enableHelm": true
            }
        },
        "syncPolicy": {
            "automated": {
                "prune": true,
                "selfHeal": true
            },
            "syncOptions": [
                "RespectIgnoreDifferences=true",
                "ServerSideApply=true",
                "Replace=true"
            ]
        },
        "ignoreDifferences": [
            {
                "group": "apiextensions.k8s.io",
                "kind": "CustomResourceDefinition",
                "jqPathExpressions": [
                    ".spec.conversion.webhook.clientConfig.caBundle",
                    ".metadata.annotations"
                ]
            }
        ]
    }
}